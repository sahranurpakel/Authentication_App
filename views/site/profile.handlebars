<link rel="stylesheet" href="/css.css">
<div class="container">
      {{> errors}}

  <h4>Profile</h4>
  <img src="{{user.profile_image}}" height="200px" width="200px">
  <form action="/profile/{{user._id}}?_method=PUT" method="POST"  enctype="multipart/form-data"
>

    <div class="form-group">
      <label for="username">Username</label>
      <input
        name="username"
        type="text"
        class="form-control"
        id="username"
        placeholder="Enter username"
        value={{user.username}}
      />
    </div>

    <div class="form-group">
      <label for="name">Name</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter name"
        value={{user.name}}

      />
    </div>

    <div class="form-group">
      <label for="surname">Surname</label>
      <input
        name="surname"
        type="text"
        class="form-control"
        id="surname"
        placeholder="Enter surname"
        value={{user.surname}}

      />
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input
        name="email"
        type="email"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Enter email"
        value={{user.email}}
        readonly

      />
    </div>

    {{#if_eq displayLink.app 'local'}}
    <div class="github col-md-4">
      <a href="/refresh/password">Refresh Password</a>
    </div>
    {{/if_eq}}

    <div class="form-group">
      <label for="profile_image">Image</label>
      <input 
        name="profile_image"
        type="file"
        {{!-- accept="image/*" --}}
        class="form-control"
        id="profile_image"
        value={{user.profile_image}}
      />
      {{user.profile_image}}

    </div>
    <div class="form-group">
      <label for="date">Birthdate</label>
      <input
        name="birthdate"
        type="date"
        accept="image/*"
        class="form-control"
        id="date"
        placeholder="Enter date"
        value={{ generateDate user.birthdate "YYYY-MM-DD"}}

      />
    </div>
      {{#if_eq user.gender "erkek"}}
          <input type="radio" id="gender" name="gender" value="erkek" checked />
          Erkek<br />
          <input type="radio" id="gender" name="gender" value="kadin" />
          Kadın<br />
        {{/if_eq}}

        {{#if_eq user.gender "kadin"}}
          <input type="radio" id="gender" name="gender" value="erkek" />
          Erkek<br />
          <input type="radio" id="gender" name="gender" value="kadin" checked />
          Kadın<br />
        {{/if_eq}}
<br><br>
    <button type="submit" class="btn btn-primary">Update Profile</button>
  </form>

</div>