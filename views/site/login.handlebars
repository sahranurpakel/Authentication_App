<link rel="stylesheet" href="/css.css" />
{{> errors}}
<div class="container">
  <h4>LogIn</h4>
  <form action="login" method="POST">
    <div class="form-group">
      <label for="username">Username</label>
      <input
        name="username"
        type="text"
        class="form-control"
        id="username"
        placeholder="Enter username"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input
        name="password"
        type="password"
        class="form-control"
        id="exampleInputPassword1"
        placeholder="Password"
      />
    </div>
    <div class="github col-md-4">
      <a href="/refresh/password">Forget Password</a>
    </div>

    <div class="container">

      <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">
          Robot Değilim</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="input"
            name="reCapDefault"
            value="{{reCap}}"
            readonly
          />
        </div>
      </div>
      <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Karakterler</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="input" name="reCaps" />
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-danger btn-block">Login</button>
  </form>
  <div class="google">
    <a href="/auth/google"><i class="fab fa-google"></i>Google ile Giriş</a>
  </div>
  <div class="github">
    <a href="/auth/github/callback"><i class="fab fa-github"></i>Github ile
      Giriş</a>
  </div>

</div>